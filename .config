# This is an empty file, please overwrite it after generating the .config file with the source cod
# 目标架构配置
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_rockchip_armv8=y
CONFIG_TARGET_rockchip_DEVICE_rk3528=y  # 假设设备定义名称，可根据实际源码调整

# 基础系统配置
CONFIG_BROKEN_IRQ_WORKAROUND=y
CONFIG_DEFAULT_HOSTNAME="RENESAS_E20C"
CONFIG_DEFAULT_IPV4_ADDR="192.168.2.1"
CONFIG_DEFAULT_NETMASK="255.255.255.0"
CONFIG_LUCI=y

# OpenClash 相关配置
CONFIG_PACKAGE_openclash=y
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_libcap=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_xtables-nft=y
CONFIG_PACKAGE_udns2tcp=y
CONFIG_PACKAGE_verysync=y

# Docker 相关配置
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_docker-compose=y
CONFIG_PACKAGE_luci-app-docker=y
CONFIG_DOCKER_STORAGE_DRIVER_OVERLAY2=y
CONFIG_PACKAGE_kmod-fs-overlay=y
CONFIG_PACKAGE_aesni-utils=y  # 若芯片支持 AES-NI 加密则保留，否则可删除

# 其他必备依赖
CONFIG_PACKAGE_glibc=y
CONFIG_PACKAGE_libseccomp=y
CONFIG_PACKAGE_lua5.3=y
CONFIG_PACKAGE_lua-cjson=y
CONFIG_PACKAGE_rsync=y
CONFIG_PACKAGE_socat=y
CONFIG_PACKAGE_ssl-cert=y

# 网络与协议
CONFIG_PACKAGE_bridge-utils=y
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_olsrd2=y
CONFIG_PACKAGE_ssh=y

# 系统工具
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_lrzip=y
CONFIG_PACKAGE_rsync=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_wget=y

# 移除不必要的默认包（可选）
# CONFIG_PACKAGE_luci-app-xxx=n

# 内核与驱动
CONFIG_KERNEL_PCI_SUPPORT=y
CONFIG_KERNEL_USB_SUPPORT=y
CONFIG_KERNEL_USB_EHCI_HCD=y
CONFIG_KERNEL_USB_OHCI_HCD=y
CONFIG_KERNEL_USB_STORAGE=y
CONFIG_KERNEL_WIRELESS=y
